<div class="container-fluid">
  <h2 class="text-center"> 修改个人资料 </h2>
  <%= simple_form_for [:account, @user] do |f| %>
  <div class="well" style="border-radius:20px">
    <%= f.input :email, :label =>"邮箱地址" %>
    <%= f.input :username, :label =>"用户名" %>
    <%= link_to("放弃更新", root_path, class: "btn btn-sm btn-default" ) %>
    <%= f.submit "提交", class: "btn btn-sm btn-default" %>
  </div>
  <% end %>
</div>
