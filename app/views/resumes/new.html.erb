<div class="container">

  <h3 class="text-center"> Upload Resume to <%= @job.title %></h3>

  <hr>

    <%= simple_form_for [@job, @resume] do |f| %>
          <%= f.input :content, :placeholder => "Self introduction" %>
          <%= f.input :attachment %>
          <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
    <% end %>


</div>
