<div class="col-md-4 col-md-offset-4">

  <h2><%= @job.title %></h2>
  <p>岗位描述：<%= @job.description %></p>
  <p>最低薪资：<%= @job.wage_lower_bound %></p>
  <p>最高薪资：<%= @job.wage_upper_bound %></p>
  <br>


  <div class="resume">
    <%= link_to("提交简历", new_job_resume_path(@job), class: "btn btn-primary " ) %>
    <% if current_user && current_user == @job.user %>
      <%= link_to("Edit", edit_job_path(@job), class: "btn btn-primary ") %>
    <% end %>
  </div>

</div>
