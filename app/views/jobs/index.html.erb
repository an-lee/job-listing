<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>



  <div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
      排序
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>

      <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
      <li><%= link_to("按照发表时间排序", jobs_path ) %></li>
    </ul>
  </div>


  <table class="table table-hover">
    <thead>
      <td>
        <i class="fa fa-id-card-o" aria-hidden="true"></i>
        招聘岗位
      </td>
      <td>
        <i class="fa fa-jpy" aria-hidden="true" ></i>
        最低薪资
        </td>
      <td>
        <i class="fa fa-jpy" aria-hidden="true" ></i>
        最高薪资
      </td>
      <td>
        <i class="fa fa-envelope-o" aria-hidden="true"></i>
        联系方式
      </td>
      <td></td>
      <td>发布时间</td>

    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.contact_email %></td>
          <td>
            <% if current_user && current_user == job.user %>
                <%= link_to("Edit", edit_job_path(job))%> |
                <%= link_to("Delete", job_path(job),
                            method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
